{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      /* keep your src/* imports */
      "@/*": ["src/*"],
      /* map `idl/...` to the root idl folder */
      "idl/*": ["idl/*"]
    }
  },
  "include": ["src", "idl"]
}